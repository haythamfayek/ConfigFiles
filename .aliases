# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
  colorflag='--color'
else # OS X `ls`
  colorflag='-G'
fi

# List all files colorized in long format
alias ll='ls -lh'

# List all files colorized in long format, including dot files
alias la='ls -lha'

# List only directories
alias lsd='ls -l | grep "^d"'

# Always use color output for `ls`
alias ls='command ls ${colorflag}'

# Update Brew and Pip
alias update-brew='brew update && brew upgrade && brew cleanup && brew doctor'
alias update-pip3='pip3 freeze --local | grep -v "^\-e" | cut -d = -f 1  | xargs -n1 pip3 install -U'

# Update npm
alias update-npm='npm update -g'

# Update gem
alias update-gem='gem update'

# Misc
alias countfiles='ls -F |grep -v / | wc -l'

# Sublime
alias subl="/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl"

# iCloud
icloud="/Users/$USER/Library/Mobile\ Documents/com\~apple\~CloudDocs/"
