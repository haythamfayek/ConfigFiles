execute pathogen#infect()

filetype plugin indent on
syntax on

set number
set ruler
set autoindent
set showmatch
set showmode
set showcmd
set list
set listchars=tab:»·,trail:·,nbsp:·

set tabstop=4
set shiftwidth=4
set softtabstop=4
set backspace=indent,eol,start
" set colorcolumn=80

set nobackup
set nowritebackup
set noswapfile

